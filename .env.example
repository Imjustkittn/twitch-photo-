# --- Twitch Extension Secrets ---
# Found in Developer Console -> Your Extension -> Manage -> Secrets
EXTENSION_CLIENT_ID=your_extension_client_id
EXTENSION_SECRET_B64=your_extension_shared_secret_base64

# --- Twitch OAuth App for EBS (create at https://dev.twitch.tv/console/apps) ---
TWITCH_APP_CLIENT_ID=your_oauth_app_client_id
TWITCH_APP_CLIENT_SECRET=your_oauth_app_client_secret
OAUTH_REDIRECT_URL=https://your-ebs.example.com/auth/callback

# Optional: if serving EBS locally over HTTPS for local test
SERVER_BASE_URL=https://localhost:8081

# Session encryption for the broadcaster's config login
SESSION_SECRET=replace_me_with_long_random_string

# SQLite DB file location
DATABASE_FILE=./server/data.db

# CORS allowlist (comma-separated origins). During local test you can leave blank and we'll send permissive CORS headers.
CORS_ORIGINS=
